{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "moduleResolution": "node",
        "rootDir": "./src",
        "outDir": "out",
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "types": ["node", "vscode", "mocha"]
    },
    "include": ["src/**/*.ts", "src/test/**/*.ts"],
    "exclude": ["node_modules", "out", ".vscode-test"]
}
