{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "rootDir": "./src",
        "outDir": "./build",
        "strict": true,
        "removeComments": true,
        "esModuleInterop": true,
        "types": ["node", "vscode", "mocha"]
    },
    "include": ["src/**/*.ts", "src/test/**/*.ts"],
    "exclude": ["node_modules", "build", ".vscode-test"]
}
