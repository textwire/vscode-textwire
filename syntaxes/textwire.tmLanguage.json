{
    "scopeName": "text.html.tw",
    "name": "Textwire",
    "fileTypes": [
        "tw.html"
    ],
    "repository": {
        "language": {
            "patterns": [
                {
                    "include": "#functions"
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#keywords"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b((?:true|false|nil|in))\\b",
                    "captures": {
                        "1": {
                            "name": "constant.language.tw"
                        }
                    }
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "begin": "(@(if|elseif|for|use|each|breakIf|continueIf|insert|reserve|component)) ?(\\()",
                    "beginCaptures": {
                        "0": {
                            "name": "keyword.tw"
                        }
                    },
                    "end": "\\)",
                    "endCaptures": {
                        "0": {
                            "name": "keyword.tw"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#language"
                        }
                    ]
                },
                {
                    "name": "keyword.tw",
                    "match": "(@(else|end|break|continue))\\b"
                }
            ]
        },
        "strings": {
            "name": "string.quoted.double.tw",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.tw",
                    "match": "\\\\."
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.tw",
            "match": "\\b(?:\\d+(?:\\.\\d+)?|0x[0-9a-fA-F]+)\\b"
        },
        "functions": {
            "name": "entity.name.function.member.tw",
            "match": "\\.(len|raw|split|trim|float|int)\\b"
        }
    },
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "include": "#directives"
        },
        {
            "begin": "(?<![\\\\{]){{",
            "end": "(}})",
            "patterns": [
                {
                    "include": "#language"
                }
            ]
        }
    ]
}