{
    "scopeName": "text.html.tw",
    "name": "Textwire",
    "fileTypes": [
        "tw.html"
    ],
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "include": "#directives"
        },
        {
            "begin": "(?<![\\\\{]){{",
            "beginCaptures": {
                "0": {
                    "name": "support.function.construct.begin.tw"
                }
            },
            "end": "(}})",
            "endCaptures": {
                "0": {
                    "name": "support.function.construct.begin.tw"
                }
            },
            "patterns": [
                {
                    "include": "#language"
                }
            ]
        }
    ],
    "repository": {
        "language": {
            "patterns": [
                {
                    "include": "#functions"
                },
                {
                    "include": "#strings"
                },
                {
                    "include": "#numbers"
                },
                {
                    "include": "#keywords"
                },
                {
                    "include": "#arrays"
                },
                {
                    "include": "#objects"
                },
                {
                    "include": "#variables"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b((?:true|false|nil|in))\\b",
                    "captures": {
                        "1": {
                            "name": "constant.language.tw"
                        }
                    }
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "begin": "(?<![\\\\@])(@(if|elseif|for|use|each|breakIf|continueIf|insert|reserve|component)) ?(\\()",
                    "beginCaptures": {
                        "0": {
                            "name": "entity.name.function.member.tw"
                        }
                    },
                    "end": "\\)",
                    "endCaptures": {
                        "0": {
                            "name": "entity.name.function.member.tw"
                        }
                    },
                    "patterns": [
                        {
                            "include": "#language"
                        }
                    ]
                },
                {
                    "name": "entity.name.function.member.tw",
                    "match": "(?<![\\\\@])(@(else|end|break|continue))"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.tw",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.tw",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.tw",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.tw",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.tw",
            "match": "\\b(?:\\d+(?:\\.\\d+)?|0x[0-9a-fA-F]+)\\b"
        },
        "functions": {
            "begin": "(\\.(len|raw|split|trim|float|int) ?\\()",
            "beginCaptures": {
                "0": {
                    "name": "entity.name.function.member.tw"
                }
            },
            "end": "\\)",
            "endCaptures": {
                "0": {
                    "name": "entity.name.function.member.tw"
                }
            },
            "patterns": [
                {
                    "include": "#language"
                }
            ]
        },
        "arrays": {
            "begin": "\\[",
            "end": "\\]",
            "patterns": [
                {
                    "include": "#language"
                }
            ]
        },
        "objects": {
            "begin": "\\{",
            "end": "\\}",
            "patterns": [
                {
                    "include": "#language"
                }
            ]
        },
        "variables": {
            "name": "variable.other.tw",
            "match": "\\b\\w+\\b"
        }
    }
}