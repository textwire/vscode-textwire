{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "text.html.tw",
    "name": "Textwire",
    "fileTypes": [
        "tw.html"
    ],
    "patterns": [
        {
            "include": "text.html.basic"
        },
        {
            "name": "keyword.control.directive.textwire",
            "match": "@(if|else|elseif|end|use|reserve|insert|for|each|continue|continueIf|break|breakIf|component)"
        }
    ]
}